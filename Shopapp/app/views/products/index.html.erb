<p id="notice"><%= notice %></p>

<h3>Shop</h3>

<br>

<table>
  <thead>
    <!-- <tr>
      <th>Title</th>

			<td>
				&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			</td>

      <th>Price</th>
      <th colspan="3"></th>
    </tr> -->
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product, class: 'btn btn-default' %></td>

				<td>
					&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				</td>

        <td><%= number_to_currency(product.price, :unit => '$') %></td>

				<td>
					&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				</td>

				<% if user_signed_in? && current_user.admin? %>
					<td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default' %></td>
					<td class="delete">
						<%= link_to 'Delete', product, method: :delete, data: { confirm: 'Delete this product?' }, class: 'btn btn-default' %>
					</td>
				<% end %>

				<td><button type="button" class="btn btn-default"><a href="/cart/<%= product.id %>"> Add to Cart </a></button></td>

      </tr>
    <% end %>

  </tbody>
</table>

<br><br><br>
<% if user_signed_in? && current_user.admin? %>
	<%= link_to 'Add a New Product', new_product_path, class: 'btn btn-default' %>
<% end %>
